<!DOCTYPE html>
<html lang="en">
  <%- include("../header"); %>
  <body>
    <%- include("../menu") %>

    <!-- 상세조회 -->
    <form id="updateForm">
      <!-- Material input -->
      <div class="md-form">
        <input
          type="text"
          id="title"
          class="form-control"
          value="<%=result.title%>"
          required
        />
      </div>

      <div class="md-form">
        <input
          type="text"
          id="director"
          class="form-control"
          value="<%=result.director%>"
          required
        />
      </div>

      <div class="md-form">
        <input
          type="text"
          id="year"
          class="form-control"
          value="<%=result.year%>"
          required
        />
      </div>

      <button type="submit" class="btn btn-primary">저장</button>
    </form>
    <%- include("../footer"); %>

    <script>
      $(function () {
        $("#updateForm").submit((event) => {
          event.preventDefault();
          // 등록
          const title = $("#title").val();
          const director = $("#director").val();
          const year = $("#year").val();

          $.ajax({
            url: "/api/movie/<%= result._id%>",
            type: "PUT",
            data: { title, director, year },
          })
            .done(() => {
              location.href = "/api/movie/<%= result._id%>";
            })
            .fail((request, status, error) => {
              alert(request.responseText);
            });
        });
      });
    </script>
  </body>
</html>
