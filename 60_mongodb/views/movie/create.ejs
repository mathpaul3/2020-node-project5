<!DOCTYPE html>
<html lang="en">
  <%- include("../header"); %>
  <body>
    <%- include("../menu") %>

    <!-- 상세조회 -->
    <form id="createForm">
      <!-- Material input -->
      <div class="md-form">
        <input type="text" id="title" class="form-control" required />
        <label for="title">Input Title</label>
      </div>

      <div class="md-form">
        <input type="text" id="director" class="form-control" required />
        <label for="director">Input Director</label>
      </div>

      <div class="md-form">
        <input type="text" id="year" class="form-control" required />
        <label for="year">Input Year</label>
      </div>

      <button type="submit" class="btn btn-primary">
        저장
      </button>
    </form>
    <%- include("../footer"); %>

    <script>
      $(function () {
        $("#createForm").submit((event) => {
          event.preventDefault();
          // 등록
          const title = $("#title").val();
          const director = $("#director").val();
          const year = $("#year").val();

          $.ajax({
            url: "/api/movie",
            type: "POST",
            data: { title, director, year },
          })
            .done(() => {
              location.href = "/api/movie";
            })
            .fail((request, status, error) => {
              alert(request.responseText);
            });
        });
      });
    </script>
  </body>
</html>
